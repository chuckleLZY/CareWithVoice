/* pages/Instruction/instruction.wxss */
.container {
  background: rgb(233, 241, 241);
  height: 100vh;
  width: 100vw;
  color: rgba(34, 52, 52, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.intro {
  font-size: 60rpx;
  margin-bottom: 60rpx;
  margin-top: 40rpx;
  font-weight: bolder;
}

.decoration {
  height: 6rpx;
  background: rgba(229, 52, 127, 0.8);
  width: 200rpx;
  margin: auto;
  margin-top: 10rpx;
}

.intro-title {
  font-weight: bolder;
  text-align: center;
}

.block {
  background: #fff;
  border-radius: 15rpx;
  height: 50%;
  width: 85%;
  padding: 40rpx 45rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  font-weight: 300;
  text-align: left;
  overflow: scroll;
}

.block::-webkit-scrollbar {
  width: 0;
}

.step-card {
  padding: 35rpx;
  border-bottom: 1rpx solid rgba(34, 52, 52, 0.15);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 20rpx;
}

.step-card:last-child {
  border-bottom: none;
}

.step-card:first-child {
  padding-top: 0;
}

.step-icon {
  height: 60rpx;
  width: 60rpx;
  margin-right: 50rpx;
}

.step-icon image {
  height: 60rpx;
  width: 60rpx;
}

.step-content {
  display: flex;
  flex-direction: column;
}

.step-title {
  font-weight: 600;
  font-size: 26rpx;
  color: #2c7a7b;
}

.step-desc {
  font-size: 20rpx;
}

.next-button {
  width: 300rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(
    to right,
    rgb(82, 212, 209),
    rgb(74, 192, 189)
  );
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}
